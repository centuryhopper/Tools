@model ResetPasswordVM


<h2>Reset Password</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" action="@Url.Action("ResetPassword", "Account")">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Token" type="hidden" />
            <input asp-for="Email" type="hidden" />
            <div class="form-outline mb-4">
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                <div class="input-group" id="show_hide_password">
                    @Html.EditorFor(m => m.Password, new
                    {
                        htmlAttributes = new
                        {
                            @type = "password",
                            @name =
                            "password",
                            @class = "form-control",
                            @placeholder = "Password"
                        }
                    })
                    
                    <div class="input-group-addon">
                        <span class="input-group-text">
                            <a style="color: black;"><i class="fa fa-eye-slash field-icon m-1"
                                    aria-hidden="true"></i></a>
                        </span>
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-outline mb-4">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                <div class="input-group" id="show_hide_confirm_password">
                    @Html.EditorFor(m => m.ConfirmPassword, new
                    {
                        htmlAttributes = new
                        {
                            @type = "password",
                            @name =
                            "confirm_password",
                            @class = "form-control",
                            @placeholder = "Confirm Password"
                        }
                    })
                    
                    <div class="input-group-addon">
                        <span class="input-group-text">
                            <a style="color: black;"><i class="fa fa-eye-slash field-icon m-1"
                                    aria-hidden="true"></i></a>
                        </span>
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary">Reset</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial">
        <script>
            $(function ()
            {
                showHidePasswordField('show_hide_password')
                showHidePasswordField('show_hide_confirm_password')
            })
        </script>
}